<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            app:riv_corner_radius="8dp"
            android:src="@drawable/img_test"
            android:id="@+id/img_iv"
            android:layout_width="match_parent"
            android:layout_height="190dp">
        </com.makeramen.roundedimageview.RoundedImageView>

        <TextView
            android:ellipsize="end"
            android:layout_margin="@dimen/padding_5"
            android:text="@string/name_app"
            android:id="@+id/title_tv"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/padding_16"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:text="@string/sub_title_splash_1"
            android:id="@+id/description_tv"
            android:textColor="@color/black"
            android:textSize="@dimen/padding_14"
            android:maxLines="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <RelativeLayout
            android:layout_margin="@dimen/padding_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:text="15000 vnd"
                android:id="@+id/amount_tv"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:textSize="@dimen/padding_15"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <ImageView
                android:layout_alignParentRight="true"
                android:padding="4dp"
                android:background="@drawable/bg_circle_grey"
                android:src="@drawable/ic_baseline_favorite_border_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/black">
            </ImageView>
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>