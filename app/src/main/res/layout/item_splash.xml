<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="@dimen/padding_15"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:src="@drawable/img_splash_1"
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="300dp">
    </ImageView>

    <TextView
        android:textAlignment="center"
        android:text="@string/title_splash_1"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/padding_7"
        android:textSize="@dimen/padding_16"
        android:layout_gravity="center"
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:textAlignment="center"
        android:text="@string/sub_title_splash_1"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/padding_7"
        android:textSize="@dimen/padding_14"
        android:layout_gravity="center"
        android:id="@+id/sub_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
</LinearLayout>